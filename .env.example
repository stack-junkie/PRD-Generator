# ===========================================
# AI PRD GENERATOR - ENVIRONMENT VARIABLES
# ===========================================

# Application Environment
NODE_ENV=development
PORT=3001

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database
DATABASE_URL=postgresql://prd_user:prd_password@localhost:5432/prd_generator
DB_HOST=localhost
DB_PORT=5432
DB_NAME=prd_generator
DB_USER=prd_user
DB_PASSWORD=prd_password

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=10000

# ===========================================
# REDIS CONFIGURATION
# ===========================================

# Redis Cache & Session Store
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# ===========================================
# AI SERVICE CONFIGURATION
# ===========================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# AI Service Limits
AI_REQUEST_TIMEOUT=30000
AI_MAX_RETRIES=3
AI_RATE_LIMIT_PER_HOUR=100

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ===========================================
# LOGGING & MONITORING
# ===========================================

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_DIR=./logs

# Application Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# ===========================================
# RATE LIMITING
# ===========================================

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# AI Rate Limiting
AI_RATE_LIMIT_POINTS=10
AI_RATE_LIMIT_DURATION=60

# ===========================================
# FILE UPLOAD & STORAGE
# ===========================================

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.md,.pdf,.docx,.txt

# Storage Configuration (future use)
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# ===========================================
# EMAIL CONFIGURATION (future use)
# ===========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=AI PRD Generator
NEXT_PUBLIC_DEBUG=false

# Feature Flags
NEXT_PUBLIC_ENABLE_EXPORT_PDF=true
NEXT_PUBLIC_ENABLE_COLLABORATION=false
NEXT_PUBLIC_ENABLE_TEMPLATES=true

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Development Configuration
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_CORS_DEBUG=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://prd_user:prd_password@localhost:5432/prd_generator_test
TEST_REDIS_URL=redis://localhost:6379/1

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================

# Only use these in production
# SENTRY_DSN=https://your-sentry-dsn-here
# ANALYTICS_ID=your-analytics-id
# CDN_URL=https://your-cdn-url-here